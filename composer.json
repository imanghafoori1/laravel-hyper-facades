{
    "name": "imanghafoori/laravel-smart-facades",
    "description": "Adds some features on the top of laravel facades",
    "keywords": ["laravel", "laravel-package", "PHP", "laravel-facades"],
    "license": "MIT",
    "homepage": "https://github.com/imanghafoori1/laravel-smart-facades",
    "authors": [
        {
            "name": "Iman Ghafoori",
            "email": "imanghafoori1@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "illuminate/support":"~5.1|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0",
        "illuminate/events":"~5.1|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0"
    },
    "autoload-dev": {
        "classmap": ["tests/TestCase.php"],
        "psr-4": {
            "Imanghafoori\\FacadeTests\\": "tests/"
        }
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "~9.0",
        "orchestra/testbench": "~7.0|~8.0",
        "imanghafoori/php-imports-analyzer": "^1.0.6"
    },
    "autoload": {
        "psr-4": {
            "Imanghafoori\\SmartFacades\\": "src"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
